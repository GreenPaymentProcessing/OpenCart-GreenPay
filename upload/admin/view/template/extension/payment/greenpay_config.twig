<div>
    <!-- Account config panel -->
    <div class="panel">
        <div class="panel-heading">
            <i class="fa fa-user"></i> {{ text_account_config }}
        </div>

        <div class="form-wrapper">
		<div class="form-group">
            <label class="control-label col-lg-1">
                {{ text_enabled }}
            </label>

            <div class="col-lg-11">
                <input type="checkbox" name="greenpay_status" id="greenpay_status" value="1" {{ greenpay_status ? 'checked' : '' }} />
            </div>
        </div>
		<div class="form-group">
			<label class="col-lg-1 control-label">{{ payment_mode }}</label>
			<div class="col-lg-11">
				<select name="greenpay_payment_mode" id="greenpay_payment_mode" class="form-control">
					<option value="https://cpsandbox.com/OpenCart.asmx" {% if greenpay_payment_mode == 'https://cpsandbox.com/OpenCart.asmx' %} selected {% endif %}>{{ text_extension_sandbox }}</option>
					<option value="https://greenbyphone.com/OpenCart.asmx" {% if greenpay_payment_mode == 'https://greenbyphone.com/OpenCart.asmx' %} selected {% endif %}>{{ text_extension_live }}</option>
				</select>
			</div>
		</div>

			<div class="form-group">
                <label class="control-label col-lg-1">
                    {{ text_login }} *
                </label>

                <div class="col-lg-11">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user "></i>
                        </span>
                        <input type="text" name="greenpay_client_id" value="{{ greenpay_client_id }}" class="form-control" required />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-1">
                    {{ text_password }} *
                </label>

                <div class="col-lg-11">
                    <div class="input-group fixed-width-lg">
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                        <input type="password" name="greenpay_api_password" class="form-control" {{ (greenpay_api_password is empty) ? "required" : "placeholder='#{text_masked}'" }} />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
